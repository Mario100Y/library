extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='family_name') 姓氏:
      input#family_name.form-control(type='text' placeholder='Family name (surname)' name='family_name' requried='true' value=(author===undefined?'':author.family_name))
    
      label(for='first_name') 名字:
      input#first_name.form-control(type='text' placeholder='First name (Christian) last' name='first_name' requried='true' value=(undefined===author?'':author.first_name))
      div.form-group
      label(for='date_of_birth') 出生日期:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author?'':author.date_of_birth_formatted))
    
      label(for='date_of_death') 死亡日期:
      input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author?'':author.date_of_death_formatted))
    button.btn.btn-primary(type='submit') Submit

  p #{errors}
  if errors
    ul
      for error in errors
        li!= error.msg
