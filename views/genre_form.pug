extends layout

block content
  h1 #{title}

  form(method="POST" action="")
    div.form-grounp
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder="Fantasy, poetry etc." name='name' value=(underfined===genre?'':genre.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li(style="color:red;")!= error.msg
